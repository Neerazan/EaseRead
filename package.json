{
  "name": "easeread",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -Ap --include '@easeread/web' --include '@easeread/api' --include '@easeread/ai-worker' run dev",
    "dev:web": "yarn workspace @easeread/web dev",
    "dev:api": "yarn workspace @easeread/api start:dev",
    "dev:ai": "yarn workspace @easeread/ai-worker dev",
    "build": "yarn workspaces foreach -Ap run build",
    "build:web": "yarn workspace @easeread/web build",
    "build:api": "yarn workspace @easeread/api build",
    "build:ai": "yarn workspace @easeread/ai-worker run dev",
    "lint": "yarn workspaces foreach -Ap run lint",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "test": "yarn workspaces foreach -Ap run test",
    "clean": "yarn workspaces foreach -Ap run clean && rm -rf node_modules",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f",
    "db:migrate:generate": "yarn workspace @easeread/api migration:generate",
    "db:migrate:run": "yarn workspace @easeread/api migration:run",
    "db:migrate:revert": "yarn workspace @easeread/api migration:revert",
    "db:migrate:show": "yarn workspace @easeread/api migration:show",
    "db:migrate:create": "yarn workspace @easeread/api migration:create",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "prettier": "^3.5.1"
  }
}
